<resources>
    <!-- EditText style -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:textColorHint">@color/md_theme_onSurfaceVariant</item>
        <item name="boxStrokeColor">@color/md_theme_primary</item>
        <item name="hintTextColor">@color/md_theme_primary</item>
        <item name="boxBackgroundColor">@color/md_theme_surface</item>
    </style>

    <!-- Button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>